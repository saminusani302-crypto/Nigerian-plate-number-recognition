# Nigerian ALPR System Configuration File
# Copy this to .env and adjust values as needed

# Flask Configuration
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# ALPR Configuration
MODEL_PATH=yolov8n.pt
CONFIDENCE_THRESHOLD=0.5
DEVICE=cpu  # Set to 'cuda' for GPU

# Logging Configuration
LOG_DIR=logs
LOG_FORMAT=csv  # Options: csv, json, both

# OCR Configuration
OCR_LANGUAGES=en
OCR_GPU=False  # Set to True for GPU acceleration

# Video Processing
MAX_FRAMES_PER_VIDEO=None  # Set to number to limit frames
VIDEO_OUTPUT_FPS=30
VIDEO_OUTPUT_QUALITY=0.8

# Performance
NUM_WORKERS=4
BATCH_SIZE=1
QUEUE_MAX_SIZE=30

# Plate Detection
MIN_PLATE_SIZE=50  # Minimum plate width in pixels
MAX_PLATE_SIZE=800  # Maximum plate width in pixels
PLATE_CONFIDENCE_THRESHOLD=0.5

# OCR Post-processing
MIN_CONFIDENCE=0.3
VALIDATE_NIGERIAN_FORMAT=True
AUTO_CORRECT_OCR=True

# API Configuration
API_RATE_LIMIT=100  # Requests per minute
MAX_FILE_SIZE=52428800  # 50MB

# Database (optional)
USE_DATABASE=False
DATABASE_URL=sqlite:///alpr.db

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_EXTENSIONS=jpg,jpeg,png,mp4,avi,mov

# Logging
LOG_LEVEL=INFO
ENABLE_TIMESTAMPS=True
SAVE_FAILED_DETECTIONS=False

# Advanced
ENABLE_BENCHMARKING=False
SAVE_INTERMEDIATE_RESULTS=False
CACHE_MODELS=True
